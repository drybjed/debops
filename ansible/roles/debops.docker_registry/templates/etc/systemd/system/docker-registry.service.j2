# {{ ansible_managed }}

[Unit]
Description=Docker Registry service
ConditionPathExists=/usr/local/sbin/docker-registry
After=network-online.target

[Service]
Type=simple
User={{ docker_registry__user }}
Group={{ docker_registry__group }}
WorkingDirectory={{ docker_registry__home }}
ExecStart=/usr/local/sbin/docker-registry serve {{ docker_registry__config_path }}
Restart=on-failure
RestartSec=10

StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=docker-registry

[Install]
WantedBy=multi-user.target
